{
  "name": "clinix",
  "version": "1.0.3",
  "description": "Clinix.mx",
  "keywords": [
    "Clinix",
    "consulta médica",
    "telemedicina"
  ],
  "author": "DFSOFT SA de CV",
  "license": "MIT",
  "main": "static/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dfsoftmx/clinixdesktop.git"
  },
  "scripts": {
    "start": "electron-builder start",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dep": "electron-builder install-app-deps",
    "rebuild": "electron-builder node-gyp-rebuild",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "devDependencies": {
    "electron": "^12.0.6",
    "electron-builder": "^22.11.1"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "electron-log": "^4.3.5",
    "electron-store": "^7.0.2",
    "electron-updater": "^4.3.8",
    "jquery": "^3.5.1",
    "jsonfile": "^6.1.0"
  },
  "build": {
    "productName": "Clinix",
    "appId": "mx.dfsoft.clinix",
    "copyright": "Copyright © 2020 DFSOFT SA de CV",
    "publish": {
      "provider": "github",
      "owner": "dfsoftmx",
      "project": "clinixdesktop"
    },
    "directories": {
      "output": "out/build",
      "buildResources": "static"
    },
    "files": [
      "**/*",
      "static/*",
      "!out/*"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "icon": "static/icons/Icon.icns",
      "entitlements": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Esta aplicación requiere acceso a la cámara para las videoconferencias.",
        "NSMicrophoneUsageDescription": "Esta aplicación requiere acceso al microfono para las videoconferencias."
      }
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "uninstallDisplayName": "Clinix",
      "artifactName": "${productName}Installer.${ext}"
    },
    "win": {
      "target": "NSIS",
      "icon": "static/icons/icon.ico"
    }
  }
}
